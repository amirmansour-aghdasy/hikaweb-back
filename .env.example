NODE_ENV=development
PORT=5000
API_VERSION=v1

MONGODB_URI=mongodb://localhost:27017/hikaweb
REDIS_URL=redis://localhost:6379

JWT_SECRET=your-super-secret-jwt-key-here
JWT_REFRESH_SECRET=your-refresh-secret-here
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

KAVENEGAR_API_KEY=your-kavenegar-api-key
KAVENEGAR_SENDER=your-sender-number

TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-admin-chat-id

ARVAN_DRIVE_ACCESS_KEY=your-arvan-access-key
ARVAN_DRIVE_SECRET_KEY=your-arvan-secret-key
ARVAN_DRIVE_BUCKET=your-bucket-name
ARVAN_DRIVE_REGION=ir-thr-at1

BCRYPT_SALT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
MAX_FILE_SIZE=10485760

# Optional services
TELEGRAM_BOT_TOKEN=your_token_here
TELEGRAM_ADMIN_CHAT_IDS=123456789

# Feature flags
SUPPRESS_WARNINGS=true
ENABLE_TELEGRAM=true
ENABLE_REDIS_RATE_LIMITING=true

# Email (مدیریت ایمیل در داشبورد)
# برای رمزنگاری رمز حساب‌های ایمیل در DB. اگر خالی باشد از JWT_SECRET استفاده می‌شود.
ENCRYPTION_KEY=
